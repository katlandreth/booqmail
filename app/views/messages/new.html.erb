<%= content_for(:title) {"Contact Form"} %>
<%= form_for @message, :multipart => true do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>
  <div class="form-group">
    <p>The best email to reach you at when I send a response (required).</p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="form-group">
    <p>The name you would like me to call you. It's nice to know who I'm talking to (optional).</p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <p>Your operating system (required).</p>
    <%= f.label :os_version %>
    <%= f.text_field :os_version %>
  </div>
  <div class="form-group">
    <p>Your GIMP version (required).</p>
    <%= f.label :gimp_version %>
    <%= f.text_field :gimp_version %>
  </div>

  <div class="form-group">
    <p>Your message</p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="form-group">
    <p>Attach a screenshot or another image that helps demonstrate the problem you're having (optional).</p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'Send Message' %>
  </div>
<% end %>
