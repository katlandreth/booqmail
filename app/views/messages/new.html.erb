<%= form_for @message, :multipart => true do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>
  <div class="form-group">
    The best email to reach you at when I send a response (required).
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="form-group">
    The name you would like me to call you. It's nice to know who I'm talking to (optional).
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    Attach a screenshot or another image that helps demonstrate the problem you're having (optional).
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit 'Send Message' %>
  </div>
<% end %>
